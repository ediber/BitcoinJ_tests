<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
            android:layout_width="@android:dimen/notification_large_icon_height"
            android:layout_height="wrap_content"
            android:text="A"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/txtA" app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintVertical_bias="0.142" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="40dp" android:layout_marginStart="40dp"/>
    <TextView
            android:text="B"
            android:layout_width="@android:dimen/notification_large_icon_height"
            android:layout_height="wrap_content"
            android:id="@+id/txtB" app:layout_constraintStart_toEndOf="@+id/txtA" android:layout_marginLeft="56dp"
            android:layout_marginStart="56dp"
            app:layout_constraintTop_toTopOf="@+id/txtA"/>
    <TextView
            android:text="C"
            android:layout_width="@android:dimen/notification_large_icon_height"
            android:layout_height="wrap_content"
            android:id="@+id/txtC" app:layout_constraintStart_toEndOf="@+id/txtB" android:layout_marginLeft="56dp"
            android:layout_marginStart="56dp"
            app:layout_constraintTop_toTopOf="@+id/txtB"/>
    <Button
            android:text="Show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/show" android:layout_marginTop="56dp" app:layout_constraintTop_toBottomOf="@+id/txtB"
            app:layout_constraintHorizontal_bias="0.277"/>
    <Button
            android:text="RefreshC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/refreshCAddress"
            app:layout_constraintTop_toTopOf="@+id/show" app:layout_constraintStart_toEndOf="@+id/show"
            android:layout_marginLeft="44dp" android:layout_marginStart="44dp"/>

</android.support.constraint.ConstraintLayout>