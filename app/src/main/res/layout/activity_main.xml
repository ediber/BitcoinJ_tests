<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
            android:layout_width="@android:dimen/notification_large_icon_height"
            android:layout_height="wrap_content"
            android:text="A"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/txtA" app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintVertical_bias="0.142" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="40dp" android:layout_marginStart="40dp"/>
    <TextView
            android:text="B"
            android:layout_width="@android:dimen/notification_large_icon_height"
            android:layout_height="wrap_content"
            android:id="@+id/txtB" app:layout_constraintStart_toEndOf="@+id/txtA" android:layout_marginLeft="56dp"
            android:layout_marginStart="56dp"
            app:layout_constraintTop_toTopOf="@+id/txtA"/>
    <TextView
            android:text="C"
            android:layout_width="@android:dimen/notification_large_icon_height"
            android:layout_height="wrap_content"
            android:id="@+id/txtC" app:layout_constraintStart_toEndOf="@+id/txtB" android:layout_marginLeft="56dp"
            android:layout_marginStart="56dp"
            app:layout_constraintTop_toTopOf="@+id/txtB"/>
    <Button
            android:text="show Addresses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/showAddresses" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/txtB"
            app:layout_constraintHorizontal_bias="0.277"/>
    <Button
            android:text="Refresh C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/refreshCAddress"
            app:layout_constraintTop_toTopOf="@+id/showAddresses"
            app:layout_constraintStart_toEndOf="@+id/showAddresses"
            android:layout_marginLeft="44dp" android:layout_marginStart="44dp"/>
    <TextView
            android:text="Seed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/seedView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/showAddresses" app:layout_constraintVertical_bias="0.16"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.377"
            android:singleLine="false"
    />
    <Button
            android:text="show seed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/showSeed"
            app:layout_constraintEnd_toStartOf="@+id/seedDate"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="@+id/seedDate" app:layout_constraintBottom_toBottomOf="@+id/seedDate"/>
    <TextView
            android:text="seed Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/seedDate"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="200dp"
            android:layout_marginRight="200dp"
            app:layout_constraintVertical_bias="0.037" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/seedView"/>

</android.support.constraint.ConstraintLayout>